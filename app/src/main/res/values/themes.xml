<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DinoPedia" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
    </style>

    <style name="Theme.DinoPedia" parent="Base.Theme.DinoPedia" />

    <style name="Text">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextBold">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextBold.H1">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextBold.H2">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextBold.H3">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBold.H4">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.P1">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Text.P2">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.P3">
        <item name="android:textSize">16sp</item>
    </style>
</resources>